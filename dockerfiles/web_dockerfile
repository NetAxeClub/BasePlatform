FROM node:16.20.0 as build-stage
WORKDIR /app
COPY web/ .
RUN rm -rf package-lock.json
RUN npm config set registry https://registry.npm.taobao.org
RUN npm install
RUN npm run initproject -- --stage=base-platform --del=true
RUN more /app/src/project/base-platform/views/cmdb/components/NetworkDeviceEdit.vue
RUN npm run build

# production stage
FROM nginx:1.23.1 as production-stage
COPY nginx/web_nginx.conf /etc/nginx/conf.d/default.conf
COPY --from=build-stage /app/dist /app
EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]